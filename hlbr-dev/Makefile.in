all: hogwash

clean:
	cd engine; make clean
	cd packets; make clean
	cd decoders; make clean
	cd tests; make clean
	cd actions; make clean
	cd routes; make clean
	cd modules; make clean
	cd mangle; make clean
	rm -f hogwash

distclean:
	make clean
	rm -f config.h
	rm -f Makefile *.old

hogwash: config.h $(HOGWASH_OBJECTS)
	cd engine;make
	cd packets; make
	cd decoders; make
	cd tests; make
	cd actions; make 
	cd routes; make
	cd modules; make
	cd mangle; make
	$(CC) -o hogwash $(DEBUG) $(HOGWASH_OBJECTS) $(THREAD) $(MYSQL) $(LIB_DL) $(EXTRA_LIBS) $(LATE_BINDING)
