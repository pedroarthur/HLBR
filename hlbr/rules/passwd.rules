# Objetivo / Target: Bloquear chamadas a arquivos de senhas remotos / Block password files calls.

<rule>
ip dst(servers)
tcp dst(53,80,110,220)
tcp nocase(/etc/passwd)
message=(passwd-1) Chamada a /etc/passwd / /etc/passwd call
action=action1
</rule>

<rule>
ip dst(servers)
tcp dst(53,80,110,220)
tcp nocase(/etc/shadow)
message=(passwd-2) Chamada a /etc/shadow / /etc/shadow call
action=action1
</rule>

<rule>
ip dst(servers)
udp dst(13,37,53,123)
udp nocase(/etc/passwd)
message=(passwd-3) Chamada a /etc/passwd / /etc/passwd call
action=action1
</rule>

<rule>
ip dst(servers)
udp dst(13,37,53,123)
udp nocase(/etc/shadow)
message=(passwd-4) Chamada a /etc/shadow / /etc/shadow call
action=action1
</rule>

