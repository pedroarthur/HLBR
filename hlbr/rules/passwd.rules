# date:       18 Dec 05
# update:     none
# target:     block password files calls.

<rule>
ip dst(servers)
tcp dst(53,80,110,220)
tcp nocase(/etc/passwd)
message=(passwd-1) /etc/passwd call
action=action1
</rule>

<rule>
ip dst(servers)
tcp dst(53,80,110,220)
tcp nocase(/etc/shadow)
message=(passwd-2) /etc/shadow call
action=action1
</rule>

<rule>
ip dst(servers)
udp dst(13,37,53,123)
udp nocase(/etc/passwd)
message=(passwd-3) /etc/passwd call
action=action1
</rule>

<rule>
ip dst(servers)
udp dst(13,37,53,123)
udp nocase(/etc/shadow)
message=(passwd-4) /etc/shadow call
action=action1
</rule>

