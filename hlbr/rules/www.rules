# target:     block invalid www requests.

# Comment the following rule if you have ASP web pages

<rule>
ip dst(www)
tcp dst(80)
tcp regex(GET[ -~]+\.asp($|/|\&|\?))
message=(www-1) .asp request
action=action1
</rule>

