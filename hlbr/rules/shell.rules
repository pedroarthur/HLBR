# Objetivo / Target: Bloquear chamadas a shells remotos / Block remote shell calls.

<rule>
ip dst(servers)
tcp dst(53,80,110,220)
tcp nocase(/bin/bash)
message=(shell-1) Chamada a /bin/bash / /bin/bash call
action=action1
</rule>

<rule>
ip dst(servers)
tcp dst(53,80,110,220)
tcp nocase(/bin/sh)
message=(shell-2) Chamada a /bin/sh / /bin/sh call
action=action1
</rule>

