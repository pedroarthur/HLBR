# target: sql injection and xss checks.

<rule>
ip dst(www)
tcp dst(80)
tcp regex(' +or +.=.--)
message=(sql-xss-1-re) sql injection (sql server)
action=action1
</rule>

<rule>
ip dst(www)
tcp dst(80)
tcp regex(' +or +'.'='.)
message=(sql-xss-2-re) sql injection (ms-access, oracle)
action=action1
</rule>


<rule>
ip dst(www)
tcp dst(80)
tcp nocase(' or union select)
message=(sql-xss-3) sql injection (union)
action=action1
</rule>

#XSS checks
<rule>
ip dst(www)
tcp dst(80)
tcp nocase(<script>)
message=(sql-xss-4) request XSS
action=action1
</rule>
