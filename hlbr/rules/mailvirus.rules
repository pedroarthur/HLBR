
# name:       mailvirus.rules
# created by: Joao Eriberto Mota Filho
# date:       14 Dec 05
# update:     14 Feb 06
# target:     block mail virus attachments.

<rule>
ip dst(email)
tcp dst(25)
tcp regex(filename=".*\.scr")
message=(mailvirus-1-re) Anexo .scr / .scr attach
action=virus
</rule>

<rule>
ip dst(email)
tcp dst(25)
tcp regex(filename=".*\.pif")
message=(mailvirus-2-re) Anexo .pif / .pif attach
action=virus
</rule>

<rule>
ip dst(email)
tcp dst(25)
tcp regex(filename=".*\.bat")
message=(mailvirus-3-re) Anexo .bat / .bat attach
action=virus
</rule>

<rule>
ip dst(email)
tcp dst(25)
tcp regex(filename=".*\.com")
message=(mailvirus-4-re) Anexo .com / .com attach
action=virus
</rule>

# Comente a regra a seguir se quiser receber arquivos .exe.
# Comment the folowing rule if you want to receive .exe files.
<rule>
ip dst(email)
tcp dst(25)
tcp regex(filename=".*\.exe")
message=(mailvirus-5-re) Anexo .exe / .exe attach
action=virus
</rule>

<rule>
ip dst(email)
tcp dst(25)
tcp regex(filename=".*\.vb.)
message=(mailvirus-6-re) Anexo .vb*/ .vb* attach
action=virus
</rule>

<rule>
ip dst(email)
tcp dst(25)
tcp regex(filename=".*\..*.exe")
message=(mailvirus-7-re) Anexo .*.exe / .*.exe attach
action=virus
</rule>

<rule>
ip dst(email)
tcp dst(25)
tcp nocase(freeporn4all)
message=(mailvirus-50) Anexo freeporn4all / freeporn4all attach
action=virus
</rule>

<rule>
ip dst(email)
tcp dst(25)
tcp nocase(myx4free)
message=(mailvirus-51) Anexo myxforfree / myxforfree attach
action=virus
</rule>
