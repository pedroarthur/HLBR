# date:       14 Dec 05
# update:     23 Mar 06
# target:     block mail virus attachments.

# bad extensions

<rule>
ip dst(email)
tcp dst(25)
tcp regex(filename="[^[:cntrl:]]+\.scr")
message=(mailvirus-1-re) .scr attach
action=virus
</rule>

<rule>
ip dst(email)
tcp dst(25)
tcp regex(filename="[^[:cntrl:]]+\.pif")
