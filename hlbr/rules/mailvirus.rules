# Objetivo / Target: Bloquear virus de email / Block mail virus.

<rule>
ip dst(email)
tcp dst(25)
tcp nocase(.scr")
message=(mailvirus-1) Anexo .scr / .scr attach
action=virus
</rule>

<rule>
ip dst(email)
tcp dst(25)
tcp nocase(.pif")
message=(mailvirus-2) Anexo .pif / .pif attach
action=virus
</rule>

<rule>
ip dst(email)
tcp dst(25)
tcp nocase(.bat")
message=(mailvirus-3) Anexo .bat / .bat attach
action=virus
</rule>

