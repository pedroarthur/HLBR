# web links into mail

<rule>
ip dst(email)
tcp dst(25)
tcp regex(href="[^[:cntrl:]]+\.scr")
message=(mailvirus-20-re) .src link
action=virus
</rule>

<rule>
ip dst(email)
tcp dst(25)
tcp regex(href="[^[:cntrl:]]+(cartao|cartoes|carteiro|card|cards|voce|foto|fotos|veja|amor|paixao|sexo|coracao|video|videos|spc|serasa|tabela|debito|debitos|divida|dividas|veja|player|Player|mamonas|festa|festas|confira|bmp)\.exe")
message=(mailvirus-21-re) malicious .exe link
action=virus
</rule>

